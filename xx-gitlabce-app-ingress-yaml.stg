/*
 * Mandatory:
 *
 * vars.gitlabceapp.nginx.hosts[]
 * vars.gitlabceapp.nginx.clientMaxBodySize
 *
 */
xx-gitlabce-app-ingress-yaml(parent, vars) ::= <<
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: gitlabce-app
  namespace: anrisoftware-com
  labels:
    app: gitlab-ce
    tier: frontend
    group: anrisoftware-com
  annotations:
    kubernetes.io/ingress.class: "nginx"
    kubernetes.io/tls-acme: "true"
    ingress.kubernetes.io/proxy-body-size: "<vars.gitlabceapp.nginx.clientMaxBodySize>"
    ingress.kubernetes.io/affinity: "cookie"
spec:
  tls:
  - hosts:
    <vars.gitlabceapp.nginx.hosts:{h|- <h>};separator="\n">
    secretName: tls-secret
  rules:
<vars.gitlabceapp.nginx.hosts:hostRule();separator="\n">

>>

hostRule(host) ::= <<
  - host: <host>
    http:
      paths:
      - path: /
        backend:
          serviceName: gitlabce-app
          servicePort: 8888
>>
